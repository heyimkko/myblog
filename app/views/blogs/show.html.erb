<body>
	<div class="flash">
		<p id="notice"><%= notice %></p>
	</div>
	<div class="structure">
		<h1><%= @blog.title %></h1>

	<div class="post">
		<blockquote>
		<%= sanitize(h(@blog.body)).gsub(/\n/, '<br/>').html_safe %>
		</blockquote>
	</div>

	<p>
  		<b>Posted:</b>
  		<%= time_ago_in_words(@blog.created_at) %> ago
	</p>

	<p>
		<%= link_to 'Edit', edit_blog_path(@blog) %> |
		<%= link_to 'Back', blogs_path %>
	</p>
</div>
</body>