<body>
<div class="structure">
<h1>A Collection of <%= @blogs.count %> Thoughts</h1>

<%= will_paginate %>

<table class="table table-striped">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted</th>
    <th></th>
    <th></th>

  </tr>

  <tr>
    <% @blogs.each do |blog| %>
    <td id="b1"><%= link_to blog.title, blog %></td>
    <td id="b2"><%=raw blog.body.html_safe %></td>
    <td id="b3"><%= time_ago_in_words(blog.created_at) %> ago</td>
    <td><%= link_to '[^]', edit_blog_path(blog) %></td>
    <td><%= link_to '[X]', blog, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<%= will_paginate %>

<br />
<div class="button">
  <%= link_to 'Post a Thought', new_blog_path, class: "btn btn-large btn-block" %>
</div>
</div>
</body>